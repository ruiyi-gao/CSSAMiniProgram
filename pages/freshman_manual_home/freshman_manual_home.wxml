<view class="bg-wrap">

<image src="https://raw.githubusercontent.com/ruiyi-gao/CSSAMiniProgram/images/images/Welcome.PNG" style="width: 750rpx; height: 441.6rpx; margin-left: 0rpx; margin-right: 0rpx;"></image>

<view>
  <view>
    <text class="title" style="margin-top:50rpx;">新生手册</text>
  </view>
