.basic{
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  display: flex;
}

.bg_wrap {
  width:100%;
  overflow-x:hidden;
}

.activity_info{
  position:relative;
}

.data_image{
  height:420rpx;
  width:740rpx;
  position:relative;
